<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textViewContactIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/contact_icon_set_a"
        android:gravity="center"
        android:padding="@dimen/padding_low"
        android:src="@drawable/ic_contact"
        android:text="B"
        android:textColor="@color/colorTextInverse"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewContactTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_low"
            android:text="Bijo Thomas"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/textViewContactNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_low"
            android:paddingLeft="@dimen/padding_low"
            android:paddingRight="@dimen/padding_low"
            android:text="8932061116" />
    </LinearLayout>

</LinearLayout>