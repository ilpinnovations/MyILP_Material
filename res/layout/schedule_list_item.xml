<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_low"
    android:background="@drawable/map_search"
    android:orientation="vertical"
    android:padding="@dimen/padding_low" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_low"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewSlotTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slot_item_slot"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewSlotContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Slot A"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_low"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewCourseTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slot_item_course"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewCourseContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Javascript n all"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_low"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewFacultyTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slot_item_faculty"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewFacultyContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sridevi D V"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_low"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewRoomTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slot_item_room"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewRoomContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CR5"
            android:textColor="@color/colorText" />
    </LinearLayout>

</LinearLayout>