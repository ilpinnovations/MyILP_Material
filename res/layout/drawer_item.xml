<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_high"
    android:paddingTop="@dimen/padding_high" >

    <ImageView
        android:id="@+id/imageViewDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_drawer_icon"
        android:src="@drawable/ic_badge" />

    <TextView
        android:id="@+id/textViewDrawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_drawer_text"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

</LinearLayout>